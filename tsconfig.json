{
  "compilerOptions": {
    "noLib": false,
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": [
      "jest",
      "node",
      "react",
      "react-dom",
      "styled-components",
      "leaflet",
      "proj4"
    ],
    "composite": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true
  },
  "files": [
    "custom.d.ts"
  ],
  "exclude": ["node_modules", "lib"],
  "include": ["src", "example", "assets"]
}
