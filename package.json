{
  "private": true,
  "workspaces": [
    "packages/*",
    "stories"
  ],
  "scripts": {
    "start": "yarn --cwd stories start",
    "lint": "eslint ./ --ext js,mdx,ts,tsx",
    "deploy:gh-pages": "yarn build:storybook && node ./scripts/gh-pages.js",
    "build:clean": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "build": "yarn build:clean && yarn build:ts && yarn build:ts:es",
    "build:storybook": "yarn --cwd stories build",
    "build:ts": "ttsc -b packages/arm-core packages/arm-draw packages/arm-cluster packages/arm-nontiled",
    "build:ts:es": "ttsc -b packages/arm-core/tsconfig.es.json packages/arm-draw/tsconfig.es.json packages/arm-cluster/tsconfig.es.json packages/arm-nontiled/tsconfig.es.json",
    "test": "yarn jest",
    "test:watch": "yarn test --watch --onlyChanged",
    "prepublish": "yarn build",
    "publish:canary": "lerna publish --canary --yes",
    "publish:stable": "lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@datapunt/asc-assets": "^0.24.0",
    "@datapunt/asc-ui": "^0.23.0",
    "@datapunt/react-maps": "^0.8.2-alpha.0",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/react": "^11.0.2",
    "@types/eslint": "^7.2.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.0",
    "@types/leaflet": "^1.5.12",
    "@types/leaflet-draw": "^1.0.2",
    "@types/leaflet.markercluster": "^1.4.2",
    "@types/node": "^14.0.13",
    "@types/proj4": "^2.5.0",
    "@types/proj4leaflet": "^1.0.5",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "gh-pages": "^3.0.0",
    "husky": ">=4",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "leaflet": "^1.6.0",
    "leaflet-draw": "^1.0.4",
    "leaflet.markercluster": "^1.4.1",
    "leaflet.nontiledlayer": "^1.0.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "ts-jest": "^26.1.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5",
    "typescript-plugin-styled-components": "^1.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,mdx,js}": "eslint --cache --fix"
  }
}
