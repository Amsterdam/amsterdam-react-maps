{
  "private": true,
  "workspaces": [
    "packages/*",
    "stories"
  ],
  "scripts": {
    "start": "npm run start --workspace=stories",
    "lint": "eslint ./ --ext ts,tsx",
    "deploy:gh-pages": "npm run build:storybook && node ./scripts/gh-pages.js",
    "build:clean": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "build": "npm run build:clean && npm run build:ts && npm run build:ts:es",
    "build:storybook": "npm run build --workspace=stories",
    "build:ts": "ttsc -b packages/arm-core packages/arm-cluster packages/arm-nontiled",
    "build:ts:es": "ttsc -b packages/arm-core/tsconfig.es.json packages/arm-cluster/tsconfig.es.json packages/arm-nontiled/tsconfig.es.json",
    "build:netlify": "npm run build && npm run build:storybook",
    "test": "jest",
    "test:watch": "jest --watch --onlyChanged",
    "publish:canary": "npm run build && lerna publish --canary --yes",
    "publish:stable": "npm run build && lerna publish"
  },
  "dependencies": {
    "leaflet": "^1.6.0",
    "leaflet.markercluster": "^1.4.1",
    "leaflet.nontiledlayer": "^1.0.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@amsterdam/asc-assets": "^0.28.0",
    "@amsterdam/asc-ui": "^0.28.0",
    "@amsterdam/react-maps": "^0.12.0",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@svgr/webpack": "^6.1.1",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^27.0.0",
    "@types/leaflet": "^1.5.12",
    "@types/leaflet-draw": "^1.0.2",
    "@types/leaflet.markercluster": "^1.4.2",
    "@types/node": "^17.0.1",
    "@types/proj4": "^2.5.0",
    "@types/proj4leaflet": "^1.0.5",
    "@types/react": "^18.0.7",
    "@types/react-dom": "^18.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.4",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.8.0",
    "contains-path": "^1.0.0",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "geojson": "^0.5.0",
    "gh-pages": "^3.0.0",
    "jest": "^27.0.4",
    "jest-cli": "^27.0.4",
    "jest-styled-components": "^7.0.4",
    "lerna": "^4.0.0",
    "node-modules-regexp": "^1.0.0",
    "prettier": "^2.5.1",
    "styled-components": "^5.1.1",
    "ts-jest": "^27.0.3",
    "ttypescript": "^1.5.10",
    "typescript": "^4.0.5",
    "typescript-plugin-styled-components": "^2.0.0"
  }
}
