{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "start": "concurrently \"yarn build:ts:es -w\" \"webpack-dev-server\"",
    "lint": "eslint ./ --ext .ts,.tsx",
    "deploy:gh-pages": "node ./scripts/gh-pages.js",
    "build:clean": "find ./packages -name \"*.d.ts\" -type f -delete && find ./packages -name \"*.tsbuildinfo\" -type f -delete",
    "build": "yarn build:clean && yarn build:ts && yarn build:ts:es",
    "build:ts": "tsc -b packages/arm-core packages/arm-draw packages/arm-cluster packages/arm-nontiled",
    "build:ts:es": "tsc -b packages/arm-core/tsconfig.es.json packages/arm-draw/tsconfig.es.json packages/arm-cluster/tsconfig.es.json packages/arm-nontiled/tsconfig.es.json",
    "build:example": "webpack --config ./webpack.config.js --prod",
    "test": "yarn jest",
    "test:watch": "yarn test --watch --onlyChanged",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.10.1",
    "@datapunt/asc-assets": "^0.20.0",
    "@datapunt/asc-ui": "^0.20.0",
    "@datapunt/react-maps": "^0.8.2-alpha.0",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/react": "^10.0.6",
    "@types/eslint": "^6.8.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^25.2.3",
    "@types/leaflet": "^1.5.12",
    "@types/leaflet-draw": "^1.0.2",
    "@types/leaflet.markercluster": "^1.4.2",
    "@types/node": "^14.0.9",
    "@types/proj4": "^2.5.0",
    "@types/proj4leaflet": "^1.0.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "concurrently": "^5.2.0",
    "core-js": "^3.6.5",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "gh-pages": "^3.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": ">=4",
    "jest": "^25.5.4",
    "jest-cli": "^26.0.1",
    "leaflet": "^1.6.0",
    "leaflet-draw": "^1.0.4",
    "leaflet.markercluster": "^1.4.1",
    "leaflet.nontiledlayer": "^1.0.8",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "style-loader": "^1.2.1",
    "styled-components": "^5.1.1",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix"
  }
}
